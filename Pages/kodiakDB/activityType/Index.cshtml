@page
@model kodiak.Pages.kodiakDB.activityType.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityType[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ActivityType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ActivityTypeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ActivityTypeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ActivityTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
